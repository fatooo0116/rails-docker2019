

<% @works.each do |work| %>
<tr>
  <td><%= work.id %></td>
  <td><%= work.title %></td>
  <td>
    <%= link_to truncate(work.content), work %>
  </td>
  <td>...</td>
  <td>
    <%= if !work.user.blank? then work.user.email  end%>
  </td>
  <td>
    <%= image_tag work.pimg.url, class:"thumbnail" if work.pimg.present? %>    
  </td>
  <td>
    <%= link_to  edit_work_path(work), id: "edit_#{work.id}", class: ''  do%>
      <i class="material-icons">edit</i>
    <% end %>
  </td>
  <td>
    <%= link_to  work_path(work),  method: :delete, id: "delete_work_#{work.id}_from_index", class:'',  data: { confirm: 'Are you sure?' }  do %>
      <i class="material-icons">delete_forever</i>
    <% end %>
  </td>

</tr>
<% end %>
