<%= form_for @work, class: "form-horizontal" do |f| %>

  <div class="row">
  <% if @work.errors.any? %>
    <% @work.errors.full_messages.each do |error| %>
      <%= js add_gritter(error, title: "Overtime App Notification", sticky: false) %>
    <% end %>
  <% end %>



  <div class=" col s12">
  <%= f.label :title, class: "col-sm-2 control-label" %>
  <%= f.text_field :title, class: "form-control" %>
  </div>




  <div class=" col s12">
    <%= f.text_area :content, :class => "tinymce", :rows => 40, :cols => 120 %>
      <%#= tinymce %>
  </div>
</div>





  <div class="row">
    <!--  images -->
    <div class=" col s6">
      <div class="preview">

      </div><!-- preview -->
    </div>
    <div class=" col s6">
      <label>330x220 PX</label>
      <div class="input-field  file-field">
        <div class="btn">

          <%=
            if @work.pimg.present?
              f.file_field :pimg ,value: @work.pimg.url
            else
              f.file_field :pimg
            end
          %>

        </div>
        <div class="file-path-wrapper">
          <input class="file-path validate" type="text">
        </div>
      </div>
    </div>
  </div><!-- row -->




  <!-- Customizable input  -->
  <div class=" col s12  input-field">
    <div class="chips">
      <input class="custom-class">
    </div>
  </div>



  <%#= render partial: 'status', locals: { f: f} if current_user.type == 'AdminUser' %>


  <%= f.submit 'Save', class: 'btn btn-primary btn-block' %>



<% end %>
